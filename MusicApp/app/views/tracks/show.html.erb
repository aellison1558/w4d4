<h1><%= @track.name %></h1>
<%= link_to "Edit Track", edit_track_url(@track) %>
<%= link_to "Back to #{@album.name}", album_url(@album) %>
<%= button_to "delete track", track_url(@track), action: 'delete', method: :delete %>

<h4>Track Type:</h4>
<p> <%= h(@track.track_type) %></p>

<h4>Lyrics:</h4>
<p><%= ugly_lyrics(@track.lyrics) %></p>

<h4>Notes:</h4>
<%= render @notes %>

<%= render partial: 'notes/form', locals: {track_id: params[:id]} %>
